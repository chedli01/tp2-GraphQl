generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  role  String
  cvs   CV[]
}

model CV {
  id     Int     @id @default(autoincrement())
  name   String
  age    Int
  job    String
  owner  User    @relation(fields: [ownerId], references: [id])
  ownerId Int
  skills Skill[] @relation("CVSkills")
  CvEvent CvEvent[]

  cvSkills CvSkill[]
}

model Skill {
  id    Int    @id @default(autoincrement())
  designation String
  cvs   CV[] @relation("CVSkills")

  cvSkills CvSkill[]
}

model CvSkill {
  cv     CV     @relation(fields: [cvId], references: [id])
  cvId   Int
  skill  Skill  @relation(fields: [skillId], references: [id])
  skillId Int

  @@id([cvId, skillId])
}

model CvEvent {
  id    Int          @id @default(autoincrement())
  type  CvEventType
  cvId  Int
  cv    CV           @relation(fields: [cvId], references: [id])
}

enum CvEventType {
  CREATED
  UPDATED
  DELETED
}